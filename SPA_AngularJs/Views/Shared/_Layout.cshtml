<!DOCTYPE html>
<html ng-app="spaCRUD">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
   @* @Scripts.Render("~/bundles/modernizr")*@
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="nav navbar-nav navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#home" id="homeRef">Home</a></li>@*@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li><a href="#firstItem"  id="firstRef"> first part</a></li> @*@Html.ActionLink("About", "About", "Home")*@
                    <li><a href="#"> second part</a></li>@*@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="bodyBackground">
        <div class="container body-content">

            @RenderBody()





            <div>

            </div>
            <br />

        </div>
            @*<footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>*@
        </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularJS")
    @Scripts.Render("~/bundles/customJS")




    @RenderSection("scripts", required: false)



    <script>
        $(document).ready(function () {
            $('#homeRef').click(function(e) {
                e.preventDefault();
                $("html, body").animate({ 
                    scrollTop: $('#home').offset().top
                }, 600);

            });

            $('#firstRef').click(function (e) {
                e.preventDefault();
                $("html, body").animate({
                    scrollTop: $('#firstItem').offset().top
                }, 600);

            });
  
        });
    </script>
</body>
</html>
